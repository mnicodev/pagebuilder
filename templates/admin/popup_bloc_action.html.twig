<ul>
    <li><a href="#" id="add-content">Ajouter un contenu</a></li>

</ul>
<script>
    $(document).ready(function () {
        $("#add-content").click(function () {

            $.ajax({
                url: url_popup_content,
                method: "POST",
                data: {bloc:"{{ bloc }}"},
                success: function (result) {
                    $("#popup").html(result);
                    $("#popup").show();
                    close();


                }
            })
        })


    })

</script>